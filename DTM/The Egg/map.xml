<?xml version="1.0"?>
<map proto="1.4.0" game="Destroy the Monument">
<name>The Egg</name>
<version>1.0.0</version>
<objective>Destroy the enemy's beacons!</objective>
<gamemode>dtm</gamemode>
<authors>
    <author uuid="b56d143f-bc34-42c9-8270-f8d4736732fd"/> <!-- Zelvak69 -->
</authors>
<contributors>
    <contributor uuid="b56d143f-bc34-42c9-8270-f8d4736732fd" contribution="Creating config.xml"></contributor> <!-- IToncek -->
</contributors>
<!-- Teams -->
<teams>
    <team id="blue-team" color="blue" min="1" max="15">Blue</team>
    <team id="red-team" color="red" min="1" max="15">Red</team>
</teams>
<!-- Kits -->
<kits>
    <kit id="default">
        <item slot="0" unbreakable="true" enchantment="sharpness:1">iron sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">diamond axe</item>
        <item slot="3" unbreakable="true">iron pickaxe</item>
        <item slot="8" amount="10">cooked beef</item>
        <item slot="9" amount="64">arrow</item>
        <chestplate unbreakable="true">iron chestplate</chestplate>
        <leggings unbreakable="true">iron leggings</leggings>
    </kit>
    <kit id="blue-kit" parents="default">
        <helmet unbreakable="true" color="3C44AA">leather helmet</helmet>
        <boots unbreakable="true" color="3C44AA">leather boots</boots>
        <item slot="4" amount="64" damage="11">stained glass</item>
    </kit>
    <kit id="red-kit" parents="default">
        <helmet unbreakable="true" color="B02E26">leather helmet</helmet>
        <boots unbreakable="true" color="B02E26">leather boots</boots>
        <item slot="4" amount="64" damage="14">stained glass</item>
    </kit>
</kits>
<!-- Spawns -->
<spawns>
    <spawn team="blue-team" kit="blue-kit" yaw="-90" region="blue-spawn"/>
    <spawn team="red-team" kit="red-kit" yaw="90" region="red-spawn"/>
    <default yaw="90" region="obs-spawn"/>
</spawns>
<!-- Monuments -->
<destroyables completion="100%" repairable="false" show-progress="true" sparks="true">
    <destroyable name="Beacon" owner="blue-team" materials="beacon" region="blue-beacon"/>
    <destroyable name="Beacon 2" owner="blue-team" materials="beacon" region="blue-beacon2"/>
    <destroyable name="Beacon" owner="red-team" materials="beacon" region="red-beacon"/>
    <destroyable name="Beacon 2" owner="red-team" materials="beacon" region="red-beacon2"/>
</destroyables>
<!-- Filters -->
<filters>
    <team id="blue-only">blue-team</team>
    <team id="red-only">red-team</team>
</filters>
<!-- Regions -->
<regions>
    <!-- Definitions -->
    <union id="monuments">
        <block id="red-beacon">18,160,-37</block>
        <block id="red-beacon2">18,160,37</block>
        <block id="blue-beacon">82,160,37</block>
        <block id="blue-beacon2">82,160,35</block>
    </union>
    <union id="spawn-protections">
        <cuboid id="blue-spawn-protection" min="124,0,-12" max="139,256,15"/>
        <cuboid id="red-spawn-protection" min="-38,0,-13" max="-23,256,15"/>
    </union>
    <point id="blue-spawn">126.5,163,1.5</point>
    <point id="red-spawn">-26.5,163,1.5</point>
    <point id="obs-spawn">50.5,200,1.5</point>
    <negative id="not-map">
        <cuboid id="map" min="-68,100,-48" max="160,220,68"/>
    </negative>
    <!-- Applications -->
    <apply region="not-map"               block="never"     message="You may not edit outside the map!"/>
    <apply region="spawn-protections"     block="never"     message="You are not allowed to modify terrain here."/>
    <apply region="blue-spawn-protection" enter="blue-only" message="You may not enter the enemy spawn."/>
    <apply region="red-spawn-protection"  enter="red-only"  message="You may not enter the enemy spawn."/>
</regions>
<!-- Item Remove -->
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>diamond axe</item>
    <item>iron pickaxe</item>
    <item>cooked beef</item>
    <item>arrow</item>
    <item>golden apple</item>
    <item>stained glass</item>
    <item>leather helmet</item>
    <item>iron chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>gold block</item>
</itemremove>
<!-- Kill Rewards -->
<kill-rewards>
    <kill-reward>
        <item amount="1">golden apple</item>
        <item amount="2">arrow</item>
    </kill-reward>
</kill-rewards>
<!-- Misc -->
<hunger>
    <depletion>off</depletion>
</hunger>
</map>